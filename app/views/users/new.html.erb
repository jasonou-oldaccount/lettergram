<div class="containerLogo">
<div class="space-div-top"></div>
<div class="companyName"><h1><%= link_to 'lettergram', root_url %></h1></div>
</div>
<div class="userStatus">
<ul>
    <li><a href="#">Account</a>
        <ul>
            <% if current_user %>
                <li style="font-size:16px;">Logged in as <%= current_user.name %>.</li>
                <li><%= link_to "Log Out", session_path("current"), method: 'delete' %></li>
            <% else %>
                <li><%= link_to "Log In", login_path %></li>
                <li><%= link_to "Sign Up", signup_path %></li>
            <% end %>
        </ul>
    </li>
    <a href="#"><li>About</li></a>
    <li><a href="#">Products</a>
        <ul>
           <li><%= link_to "Choose from a template", step_two_gallery_path%></li>
            <li><%= link_to "Design your Own", step_two_design_path%></li>
         </ul>
    </li>
    <a href="#"><li>Contact</li></a>
</ul>  

</div>
<h1 style="margin-top:150px;">Sign Up</h1>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="errorMessage">
        <% @user.errors.full_messages.each do |message| %>
      <div class="error"><%= message %> <br /></div>
        <% end %>
    </div>
  <% end %>
  <div class="form">
    <%= f.label :name %><br />
    <%= f.text_field :name %> 
  </div>
  <div>
    <%= f.label :email %><br />
    <%= f.text_field :email %> 
  </div>
  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password %> 
  </div>
  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %> 
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>