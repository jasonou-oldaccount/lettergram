<div class="containerLogo">
<div class="companyName"><h1><%= link_to 'lettergram', root_url %></h1></div>
<div class="userStatus">
<ul>
    <li><a href="#">Account</a>
        <ul>
            <% if current_user %>
                <li style="font-size:16px;">Logged in as <%= current_user.name %>.</li>
                <li><%= link_to "Log Out", session_path("current"), method: 'delete' %></li>
            <% else %>
                <li><%= link_to "Log In", login_path %></li>
                <li><%= link_to "Sign Up", signup_path %></li>
            <% end %>
        </ul>
    </li>
    <a href="#"><li>About</li></a>
    <li><a href="#">Products</a>
        <ul>
            <a href="#"><li>Choose from a template</li></a>
            <a href="#"><li>Design your Own</li></a>  
        </ul>
    </li>
    <a href="#"><li>Contact</li></a>
</ul>  
</div>
</div>
<h1>Login</h1>
<%= form_tag sessions_path do %>
  <div class="form">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email]%> 
  </div>
  <div>
    <%= label_tag :password %><br />
    <%= text_field_tag :password, params[:password], :type => "password" %> 
  </div>
  <div class="actions"><%= submit_tag "Log In" %></div>
<% end %>